  <!-- Contact section -->
  <section class="full-page" id="contact">

    <div class="row w-100 mt-2">
      <div class="col-md-12">
        <div class="d-flex flex-column mt-2"  data-aos="zoom-out" data-aos-duration="2000">
          <small><%= data[0].contactSection.aboutSectionText %> </small>
          <h1 class="text-primary bold text-uppercase">
            <%= data[0].contactSection.sectionText %>
          </h1>
          <hr color="#0d6efd" width="9%" size="8px">
        </div>
      </div>
    </div>
    <div class="row w-100 mt-2">
      <div class="col-md-12">
        <div class="skills-description"  data-aos="zoom-in" data-aos-duration="2000" data-aos-delay="200">
          <p>
            <%= data[0].contactSection.sectionDescription %>
          </p>
        </div>
      </div>
    </div>

    <div class="row w-100 mb-4" data-aos="fade-right" data-aos-delay="300" data-aos-duration="2000">
      <div class="col-md-6 mt-4">
        <div class="">
          <form action="/contact" method="post">
            <div class="row w-100 my-2">
              <div class="col-md-6 mt-2">
                <input type="text" required name="contactFormName" class="form-control" placeholder="Your Name">
              </div>              
              <div class="col-md-6 mt-2">
                <input type="text" required name="contactFormEmail" class="form-control email" placeholder="Your Email">
                <small class="emailError d-inline-block" style="color: red;"></small>
              </div>              
            </div>
            <div class="row w-100 mt-2">
              <div class="col-md-12">
                <input type="text" required name="contactFormSubject" class="form-control" placeholder="Email Subject">
              </div>
            </div>
            <div class="row w-100 my-2">
              <div class="col-md-12">
                <textarea required name="contactFormMessage" id="message-body" cols="30" rows="3" placeholder="Your message goes here" class="form-control"></textarea>
              </div>
            </div>
            <div class="row w-100">
              <div class="col-md-12">
                <button type="submit" class="btn btn-primary form-submit">Send Message</button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <div class="col-md-6 mt-4 contact-right" data-aos="fade-left" data-aos-delay="500" data-aos-duration="1500">
        <div class="mt-2">          
          <div class="contact-address mb-3">
            <i>
              <h6><%= data[0].contactDetails.address %></h6>
            </i>
          </div>
          <div class="contact-email text-primary mb-3">                          
                <a href='mailto:<%= data[0].contactDetails.email %>'><%= data[0].contactDetails.email %></a>                          
            <hr width="20%" color="#0d6efd" size="2px" class="mb-2">
          </div>
          <div class="contact-phone-number mb-3">            
            <a href="tel:'<%= data[0].contactDetails.phoneNumber %>'"><%= data[0].contactDetails.phoneNumber %></a>
          </div>
          <% if (data[0].resume.file) { %>
            <a href="<%= data[0].resume.file %>" target="_blank" class="btn btn-primary text-uppercase"><%= data[0].contactDetails.buttonText %></a>
          <% } else { %> 
            <a href="#contact" target="_blank" class="btn btn-primary text-uppercase"><%= data[0].contactDetails.buttonText %></a>
          <% } %>
        </div>
      </div>
    </div>        

  </section>
  <!-- End of contact section -->
</div>
<%- include('./partials/footer.ejs') %> 